<PreferenceScreen  xmlns:android="http://schemas.android.com/apk/res/android">
   <PreferenceCategory
       android:title="@string/pref_reminder"
       android:key="pref_key_reminder_settings">
       <PreferenceScreen
           android:title="@string/title_reminder_time"
           android:key="pref_key_reminder_time"
           android:persistent="true">
           <hslu.bda.medimemory.fragment.TimePickerPreference
               android:key="pref_key_morning_reminder"
               android:title="@string/title_morning_reminder"
               android:defaultValue="25200000"
               android:persistent="true"/>
           <hslu.bda.medimemory.fragment.TimePickerPreference
               android:key="pref_key_noon_reminder"
               android:title="@string/title_noon_reminder"
               android:defaultValue="39600000"
               android:persistent="true"/>
           <hslu.bda.medimemory.fragment.TimePickerPreference
               android:key="pref_key_evening_reminder"
               android:title="@string/title_evening_reminder"
               android:defaultValue="61200000"
               android:persistent="true"/>
           <hslu.bda.medimemory.fragment.TimePickerPreference
               android:key="pref_key_night_reminder"
               android:title="@string/title_night_reminder"
               android:defaultValue="82800000"
               android:persistent="true"/>
       </PreferenceScreen>
       <PreferenceScreen
           android:title="@string/pref_foodinstruction"
           android:key="pref_key_foodinstruction"
           android:persistent="true">
       <hslu.bda.medimemory.fragment.NumberPickerPreference
           android:key="pref_key_before_food"
           android:title="@string/title_before_food"
           android:defaultValue="15"
           android:persistent="true"/>
       <hslu.bda.medimemory.fragment.NumberPickerPreference
           android:key="pref_key_after_food"
           android:title="@string/title_after_food"
           android:defaultValue="15"
           android:persistent="true"/>
       </PreferenceScreen>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/pref_notifications"
        android:key="pref_key_reminder_settings"
        android:persistent="true">
        <RingtonePreference
            android:key="pref_key_ringtone"
            android:title="@string/title_ringtone"
            android:ringtoneType="notification"
            android:persistent="true"/>
        <CheckBoxPreference
            android:key="pref_key_vibration"
            android:title="@string/title_vibration"
            android:defaultValue="true"
            android:persistent="true"/>
    </PreferenceCategory>

</PreferenceScreen>